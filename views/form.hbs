<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>NASA images</title>
</head>
<body>
<div id="contact">
    <h1>Search NASA images&nbsp; <font size="3"><a href={{pages.[0]}}>Home</a>&nbsp;&nbsp;<a href={{pages.[1]}}>Cards</a></font></h1>

    <form action="/nasa" method="post" align="center">
        <fieldset>
            <label for={{box1}}>Keyword:</label>
            <input type="text" id={{box1}} name={{box1}} placeholder="Enter the keyword" />
            <br><br>
            {{!-- {{name field for object}} --}}
            <!--<label for={{box2}}>{{box2}}:</label>-->
            <!--<input type="email" id={{box2}} name={{box2}} placeholder="Enter your email address" />-->
            <!--<br><br>-->

            <input type="submit" value="Search images" />

            <p>{{result}}</p>

            {{#each output}}
                <img src = '{{img}}'>
                <p>{{desp}}</p>
                <br>
            {{/each}}

        </fieldset>
    </form>
</div>
</body>
{{> footer}}
</html>